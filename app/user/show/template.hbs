<div class='card mx-auto' style='width: 18rem'>
  <img src='{{this.model.photoURL}}' class='card-img-top' alt='Avatar' />
  <div class='card-body'>
    <h5 class='card-title'>{{this.model.username}}</h5>
    <p class='card-text'>Some quick example text to build on the card title and
      make up the bulk of the card content.</p>
  </div>
  <ul class='list-group list-group-flush'>
    <li class='list-group-item'>{{this.model.id}}</li>
    <li class='list-group-item'>{{this.model.email}}</li>
    <li class='list-group-item'>{{this.model.password}}</li>
  </ul>
  <div class='card-body'>
    <a href='#' class='card-link'>Card link</a>
    <a href='#' class='card-link'>Another link</a>
  </div>
</div>



