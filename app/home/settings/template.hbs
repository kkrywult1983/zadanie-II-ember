{{page-title 'Settings'}}

<Header>Settings</Header>

<div class='container'>
  <form>
    {{!-- {{on 'submit' this.onSubmit}} --}}

    <div class='mb-3 row'>
      <label for='username' class='col-sm-2 col-form-label'>Username</label>
      <div class='col-sm-10'>
        <input
          type='text'
          class='form-control'
          id='username'
          placeholder='username'
          {{!-- {{on 'input' this.onLoginChange}} --}}
        />
      </div>
    </div>
    <div class='mb-3 row'>
      <label for='email' class='col-sm-2 col-form-label'>Email</label>
      <div class='col-sm-10'>
        <input
          type='text'
          class='form-control'
          id='email'
          placeholder='email'
          {{!-- {{on 'input' this.onEmailChange}} --}}
        />
      </div>
    </div>
    <div class='mb-3 row'>
      <label for='photoURL' class='col-sm-2 col-form-label'>Photo URL</label>
      <div class='col-sm-10'>
        <input
          type='text'
          class='form-control'
          id='photoURL'
          placeholder='photoURL'
          {{!-- {{on 'input' this.onPhotoURLChange}} --}}
        />
      </div>
    </div>
    <div class='mb-3 row'>
      <label
        for='inputPassword'
        class='col-sm-2 col-form-label'
      >Password</label>
      <div class='col-sm-10'>
        <input
          type='password'
          class='form-control'
          id='inputPassword'
          placeholder='password'
          {{!-- {{on 'input' this.onPasswordChange}} --}}
        />
      </div>
    </div>
    <div class='mb-3 row'>
      <div class='d-flex'>
        <button type='submit' class='btn btn-primary me-2 w-25'>Save</button>
        <button type='submit' class='btn btn-warning ms-2 w-25'>Cancel</button>
      </div>
    </div>
  </form>
  <div>
    <span>Mam juz konto. </span><LinkTo @route='login'>Zaloguj.</LinkTo>
  </div>
</div>

{{outlet}}