{{page-title 'Login'}}
<Header>Login</Header>

<div class='container'>

  <form {{on 'submit' this.onSubmitChange}}>
    <div class='mb-3 row'>
      <label for='username' class='col-sm-2 col-form-label'>Username</label>
      <div class='col-sm-10'>
        <input
          type='text'
          class='form-control'
          id='username'
          placeholder='username'
          {{on 'input' this.onLoginChange}}
        />
      </div>
    </div>
    <div class='mb-3 row'>
      <label
        for='inputPassword'
        class='col-sm-2 col-form-label'
      >Password</label>
      <div class='col-sm-10'>
        <input
          type='password'
          class='form-control'
          id='inputPassword'
          placeholder='password'
          {{on 'input' this.onPasswordChange}}
        />
      </div>
    </div>
    <div class='mb-3 row'>
      <button
        type='submit'
        class='btn btn-primary'
        {{on 'submit' this.onSubmitChange}}
      >Login</button>

    </div>
  </form>

  <div class='container'>
    <span>Nie mam konta:
      <LinkTo @route='register'>Zarejestruj siÄ™</LinkTo></span>
  </div>

</div>

{{outlet}}